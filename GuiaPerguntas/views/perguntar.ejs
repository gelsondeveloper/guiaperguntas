<body>
    <div class="container">
       <%- include ('partials/navbar.ejs') %>
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Realizar Pergunta</h3>  
            </div>
            <div class="card-body">
                <hr>
                <form action="/salvarpergunta" method="post">
                    <label for="titulo">Título:</label>
                    <input type="text" placeholder="Título da Pergunta" name="titulo" class="form-control">
                    <br><label for="descricao">Descrição:</label>
                    <textarea placeholder="Escreva sua pergunta aqui" name="descricao" class="form-control"></textarea>
                    <br>
                    <button class="btn btn-primary" type="submit">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
    
</body>
